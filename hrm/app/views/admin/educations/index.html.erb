<%= render partial: 'navbar' %>
<br>
<p style="color: green"><%= notice %></p>

<div class="container mt-4 mb-4  bg-white p-2 rounded">
  <div class="row">
    <div class="col-6">
      <div>
        <h1>Educations</h1>
      </div>
    </div>
    <div class="col-6">
      <div class="text-end">
        <%= link_to "+ Add", new_admin_education_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<%# table to show education data %>
<div class="container mt-4">
  <table class="table table-bordered table-striped table-hover">
    <thead class="bg-secondary text-white">
      <tr>
        <th scope="col">Checkbox</th>
        <th scope="col">Name</th>
        <th scope="col">Delete</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <tbody>
      <!-- Sample rows, you can add more as needed -->

 <% @educations.each do |education| %>
  <tr>
    <td><input type="checkbox"></td>
    <td>
      <%= education.level %>
    </td>
    <td>
   
     <%= button_to "Delete", admin_education_path(education), method: :delete, class: "btn btn-danger" %>

      </td>
    <td>
      <%= link_to "Edit", edit_admin_education_path(education), class:"btn btn-primary" %>
  </tr>
<% end %>


    </tbody>
  </table>
</div>





